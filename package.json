{
    "name": "developers-notebook",
    "version": "0.0.1",
    "description": "A digital notebook for developers",
    "main": "./src/main.js",
    "scripts": {
        "build": "./node_modules/.bin/webpack",
        "prestart": "npm run build",
        "start": "NODE_ENV=development electron .",
        "prestart:prod": "npm run build",
        "start:prod": "electron .",
        "test": "npm run lint",
        "lint": "./node_modules/.bin/eslint .",
        "precommit": "npm test",
        "postinstall": "install-app-deps",
        "prepack": "npm run build",
        "pack": "electron-builder --dir",
        "predist": "npm run build",
        "dist": "electron-builder"
    },
    "build": {
        "productName": "BookJournal",
        "copyright": "Copyright Â© 2018 Alex Seifert",
        "appId": "com.alexseifert.bookjournal",
        "buildDependenciesFromSource": true,
        "files": [
            "!*.code-workspace",
            "!build-scripts",
            "!glyph-iconset-master",
            "!images",
            "!Notes.md"
        ],
        "mac": {
            "target": [
                "dmg",
                "pkg"
            ],
            "category": "public.app-category.productivity",
            "entitlements": "build/entitlements.mac.plist",
            "type": "development"
        },
        "linux": {
            "target": [
                "snap",
                "deb",
                "tar.gz",
                "AppImage"
            ],
            "category": "Office"
        },
        "win": {
            "target": [
                "nsis",
                "portable"
            ],
            "icon": "build/icon.ico"
        }
    },
    "repository": "gogs@git.alexseifert.de:alexseifert/DevelopersNotebookElectron.git",
    "author": {
        "name": "Alex Seifert",
        "email": "alex@alexseifert.com"
    },
    "homepage": "https://www.alexseifert.com",
    "devDependencies": {
        "css-loader": "^1.0.0",
        "electron": "^3.0.3",
        "electron-builder": "^20.28.4",
        "eslint": "^5.7.0",
        "eslint-plugin-promise": "^4.0.1",
        "husky": "^1.1.2",
        "ts-loader": "^5.2.2",
        "typescript": "^3.1.3",
        "vue": "^2.5.17",
        "vue-loader": "^15.4.2",
        "vue-template-compiler": "^2.5.17",
        "webpack": "^4.21.0",
        "webpack-cli": "^3.1.2"
    },
    "dependencies": {
        "mkdirp": "^0.5.1",
        "sequelize": "^4.40.0",
        "sqlite3": "^4.0.2",
        "umzug": "^2.1.0"
    }
}
