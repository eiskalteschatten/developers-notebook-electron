{
    "name": "developers-notebook",
    "version": "0.0.1",
    "description": "A digital notebook for developers",
    "main": "./src/main.js",
    "scripts": {
        "build": "node ./build-scripts/build.js && ./node_modules/.bin/webpack --mode=development",
        "build:prod": "node ./build-scripts/build.js && ./node_modules/.bin/webpack --mode=production",
        "prestart": "npm run build",
        "start": "NODE_ENV=development electron .",
        "prestart:prod": "npm run build:prod",
        "start:prod": "electron .",
        "test": "npm run lint",
        "lint": "./node_modules/.bin/eslint .",
        "postinstall": "electron-builder install-app-deps",
        "prepack": "npm run build:prod",
        "pack": "electron-builder --dir",
        "predist": "npm run build:prod",
        "dist": "electron-builder"
    },
    "build": {
        "productName": "Developer's Notebook",
        "copyright": "Copyright Â© 2018 Alex Seifert",
        "appId": "com.alexseifert.developersnotebook",
        "buildDependenciesFromSource": true,
        "files": [
            "!*.code-workspace",
            "!build-scripts",
            "!images"
        ],
        "mac": {
            "target": [
                "dmg",
                "pkg"
            ],
            "category": "public.app-category.developer-tools",
            "entitlements": "build/entitlements.mac.plist",
            "type": "development"
        },
        "linux": {
            "target": [
                "snap",
                "deb",
                "tar.gz",
                "AppImage"
            ],
            "category": "Development"
        },
        "win": {
            "target": [
                "nsis",
                "portable"
            ],
            "icon": "build/icon.ico"
        }
    },
    "repository": "gogs@git.alexseifert.de:alexseifert/DevelopersNotebookElectron.git",
    "author": {
        "name": "Alex Seifert",
        "email": "alex@alexseifert.com"
    },
    "homepage": "https://www.alexseifert.com",
    "devDependencies": {
        "compile-sass": "0.0.5",
        "css-loader": "^1.0.0",
        "electron": "^3.0.3",
        "electron-builder": "^20.28.4",
        "eslint": "^5.7.0",
        "eslint-plugin-promise": "^4.0.1",
        "husky": "^1.1.2",
        "node-sass": "^4.9.4",
        "sass-loader": "^7.1.0",
        "vue": "^2.5.17",
        "vue-loader": "^15.4.2",
        "vue-router": "^3.0.1",
        "vue-template-compiler": "^2.5.17",
        "webpack": "^4.21.0",
        "webpack-cli": "^3.1.2",
        "webpack-node-externals": "^1.7.2"
    },
    "dependencies": {
        "bootstrap": "^4.1.3",
        "jquery": "^3.3.1",
        "mkdirp": "^0.5.1",
        "popper.js": "^1.14.4",
        "sequelize": "^4.40.0",
        "sqlite3": "^4.0.2",
        "umzug": "^2.1.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm test"
        }
    }
}
